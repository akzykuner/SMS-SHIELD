import unittest
from classifier import Classifier

class TestPipeline(unittest.TestCase):
    def test_pipeline_offline(self):
        clf = Classifier()
        text = "Texto ejemplo pipeline"
        proba = clf.predict_proba(text)
        label = clf.predict_label(text, 0.5)
        self.assertIsNotNone(proba)
        self.assertIsInstance(label, int)

if __name__ == "__main__":
    unittest.main()

